<%= form_with(model: game, local: true) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form_group">
    <%= form.label :title %><br>
    <%= form.text_field :title, class: "form-control input-lg" %>
  </div>

  <div class="form_group">
    <%= form.label :year %><br>
    <%= form.number_field :year, class: "form-control input-lg" %>
  </div>

    <div class="form-group" style="max-width: 400px">
    <h5>Genre:</h5></font>
    <%= form.select :genre, [["Action", "Action"],
                            ["Action adventure", "Action adventure"],
                            ["First-person shooter", "First-person shooter"],
                            ["Adventure", "Adventure"],
                            ["Role-playing", "Role-playing"],
                            ["Simulation", "Simulation"],
                            ["Strategy", "Strategy"],
                            ["Sports", "Sports"],
                            ["Idle gaming", "Idle gaming"],
                            ["Other genres", "Other genres"],
                            ], prompt: "Select genre...", id: :song_genre %>
  </div>

  <div class="form-group">
    <%= form.label :console %><br>
    <%= form.text_field :console, class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= form.label :description %><br>
    <%= form.text_area :description, class: "form-control input-lg" %>
  </div>
  
  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, id:"file-input" %>
  </div>

  <div class="form-group"><br>
    <%= form.submit "Post New Game", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
